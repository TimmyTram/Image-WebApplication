<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{title}}</title>
    {{#each css}}
    <link rel="stylesheet" type="text/css" href="/public/css/{{this}}">
    {{/each}}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    {{#each js}}
    <script defer type="text/javascript" src="/public/js/{{this}}"></script>
    {{/each}}
    <script defer type="text/javascript" src="/public/js/frontend.js"></script>
</head>

<body>
    {{!-- {{log this}} --}}

    {{> header}}
    
    {{#if (emptyObject messages)}}
    {{> flashmessage}}
    {{/if}}

    {{{body}}}
    {{> footer}}

    {{#if logged}}
        <script>
            let ele = document.getElementById('logout-button');
            if(ele) {
                ele.onclick = (even) => {
                    fetch('/users/logout', {
                        method: "POST"
                    })
                    .then((data) => {
                        location.replace('/');
                    })
                }
            }
        </script>
    {{/if}}

</body>

</html>