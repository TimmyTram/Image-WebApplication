<div class="wrap-container">
    <div class="form-container">
        <form id="login-form" method="POST" action="/users/login" enctype="application/x-www-form-urlencoded" autocomplete="off">
            <div class="username-container">
                <label for="username">USERNAME:</label>
                <input type="text" id="username" name="username" placeholder="Username" required />
            </div>
            <div class="password-container">
                <label for="password">PASSWORD:</label>
                <input type="password" id="password" name="password" placeholder="Password" required />
            </div>

            <div class="flex-container">
                <div class="button-container">
                    <button id="submit-button" type="submit"><i class="fas fa-sign-in-alt"></i> Login</button>
                </div>
                <div class="anchor-container">
                    <a id="register-redirect-anchor" href="/registration"><i class="fas fa-user-plus"></i> Don't have an account? Register here!</a>
                </div>
            </div>
        </form>
    </div>
</div>