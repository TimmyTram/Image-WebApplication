<div class="grid-container">
    <div class="form-container">
        <form id="registration-form" method="POST" action="/users/register" enctype="application/x-www-form-urlencoded" autocomplete="off">
            <div class="username-container">
                <label for="username">USERNAME:</label>
                <input type="text" id="username" name="username" placeholder="Username" required />
            </div>

            <div class="email-container">
                <label for="email">EMAIL:</label>
                <input type="email" id="email" name="email" placeholder="example@example.com" required />
            </div>

            <div class="password-container">
                <label for="password">PASSWORD:</label>
                <div id="password-input-component">
                    <input type="password" id="password" name="password" placeholder="Password" required />
                    <span class="eye-con"><i class="fas fa-eye"></i></span>
                </div>
            </div>

            <div class="confirm-password-container">
                <label for="confirm-password">CONFIRM PASSWORD:</label>
                <div id="password-input-component">
                    <input type="password" id="confirm-password" name="cpassword" placeholder="Confirm Password" required />
                    <span class="eye-con"><i class="fas fa-eye"></i></span>
                </div>
            </div>

            <div class="flex-container">
                <div class="verification-container">
                    <input type="checkbox" id="age-verification" name="ageVerification" required />
                    <label for="age-verification"><i class="fas fa-user-check"></i> I am above 13 years old.</label>
                </div>

                <div class="tos-container">
                    <input type="checkbox" id="agree-to-TOS" name="agreeToTOS" required />
                    <i class="fas fa-scroll"></i> 
                    <a href="#">I accept and read the TOS and Privacy Rules</a>
                </div>

                <div class="button-container">
                    <button id="submit-button" type="submit"><i class="fas fa-clipboard-check"></i> Register</button>
                </div>
            </div>
        </form>
    </div>
    <div class="error-container">
        <div id="username-error-container"></div>
        <div id="email-error-container"></div>
        <div id="password-error-container"></div>
        <div id="confirm-password-error-container"></div>
    </div>
</div>